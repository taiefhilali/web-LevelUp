{% extends 'backbase.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Datep</th>
                <td>{{ post.datep ? post.datep|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ post.idUser.idUser }}</td>
            </tr>
