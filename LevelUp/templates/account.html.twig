                    <div  class="form-group row"><label class="labels">Date de naissance</label>
                           {{ form_widget(form.dns,{'attr':{'class':'form-control'}}
						)}}
						{{ form_errors(form.dns,{'attr':{'class':'text-danger'}}) }}</div>
                    
                </div>
              
