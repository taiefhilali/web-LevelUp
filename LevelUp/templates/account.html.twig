                       {{ form_widget(form.prenom,{'attr':{'class':'form-control'}}
						)}}
						{{ form_errors(form.prenom,{'attr':{'class':'text-danger'}}) }}
                        </div>
                    <div  class="form-group row"><label class="labels">Nom </label>
                    {{ form_widget(form.nom,{'attr':{'class':'form-control'}}
						)}}
						{{ form_errors(form.nom,{'attr':{'class':'text-danger'}}) }}</div>
                    <div  class="form-group row"><label class="labels">Email</label>
                    {{ form_widget(form.email,{'attr':{'class':'form-control'}}
						)}}
						{{ form_errors(form.email,{'attr':{'class':'text-danger'}}) }}</div>
                    <div  class="form-group row"><label class="labels">Telephone</label>
                    {{ form_widget(form.tel,{'attr':{'class':'form-control'}}
						)}}
