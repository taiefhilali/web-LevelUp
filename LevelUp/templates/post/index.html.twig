{% extends 'backbase.html.twig' %}

{% block bodyback %}
    <h1  class="text-info"align="center" >Publication </h1>


    <table class="table table-sm table-hover" >
        <span class="border border-dark">

        <thead>
            <tr class="bg-info">
                <th scope="col">Title</th>
                <th scope="col">Content</th>
                <th scope="col">Datep</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

        {% for post in posts %}
            <tr>

                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.datep ? post.datep|date('Y-m-d') : '' }}</td>

                <td>

                    <a href="{{ path('app_post_delete', {'id': post.id}) }}"  class="btn btn-outline-info" >Supprimer</a>



                </td>
            </tr>
        {% else %}
            <tr>

                <th scope="row">1</th>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
            </span>
    </table>
    <nav aria-label="Page navigation example" >
        <ul class="pagination justify-content-end text-align:center" >
            <li class="page-item disabled align-content-center">
                <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>
            <li     {{ knp_pagination_render(posts) }}
            </li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>


{% endblock %}