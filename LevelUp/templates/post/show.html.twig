{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block content %}
    <h1  class="text-info"align="center" >Publication </h1>

    <table class="table table-success table-striped" border="1">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Datep</th>
                <td>{{ post.datep ? post.datep|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ post.idUser.idUser }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_post_index') }}"class="btn btn-outline-info">Annuler</a>

    <a href="{{ path('app_post_edit', {'id': post.id}) }}"class="btn btn-outline-info">Modifier</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
