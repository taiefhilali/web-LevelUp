<!-- Load Flashy default JavaScript -->
<script src="{{ asset('bundles/mercuryseriesflashy/js/flashy.js') }}"></script>
{{ include('@MercurySeriesFlashy/flashy.html.twig') }}
<link href="//fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link href='//fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700' rel='stylesheet'>
<link rel="stylesheet" href="{{ asset('bundles/mercuryseriesflashy/css/flashy.css') }}">
    <h3 style="color: #00AA88" align="center" >Reclamation</h3>

    <table class="table" border="1">
        <thead class="thead" style="background: cadetblue;color:white;">
            <tr>
                <th>Description</th>
                <th>Warn</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations|reverse %}
            <tr>
                <td>{{ reclamation.description }}</td>
                <td>{{ reclamation.warn ? 'Yes' : 'No' }}
                {% if reclamation.warn == false  %}
                    <a class="btn btn-warning" href="{{ path('warn_reclamation',{'idReclamation':reclamation.idReclamation}) }}">WARN </a>
                    {% endif %}
                </td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_reclamation_show', {'idReclamation': reclamation.idReclamation}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
